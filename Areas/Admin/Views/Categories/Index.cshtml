@model IEnumerable<Neovore.Web.Domain.Entities.CategorieProduit>
@{
    ViewData["Title"] = "Catégories de produits";
}
<div class="page-header">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h1 class="page-title">Catégories de produits</h1>
      <p class="page-subtitle">Gérer les catégories de votre catalogue</p>
    </div>
    <a class="btn btn-primary" href="/Admin/Categories/Create">
      <i class="bi bi-plus-circle me-2"></i>Nouvelle catégorie
    </a>
  </div>
</div>

<div class="admin-card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Ordre</th>
            <th>Nom</th>
            <th>Slug</th>
            <th>Active</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var cat in Model)
          {
            <tr>
              <td>@cat.Ordre</td>
              <td><strong>@cat.Nom</strong></td>
              <td><small class="text-muted">/@cat.Slug</small></td>
              <td>
                @if (cat.EstActive)
                {
                  <span class="badge bg-success">Oui</span>
                }
                else
                {
                  <span class="badge bg-secondary">Non</span>
                }
              </td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" href="/Admin/Categories/Edit/@cat.Id">
                  <i class="bi bi-pencil me-1"></i>Modifier
                </a>
                <form method="post" action="/Admin/Categories/Delete/@cat.Id" class="d-inline">
                  @Html.AntiForgeryToken()
                  <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                    <i class="bi bi-trash me-1"></i>Supprimer
                  </button>
                </form>
              </td>
            </tr>
          }
        </tbody>
      </table>
      @if (!Model.Any())
      {
        <div class="text-center py-5">
          <i class="bi bi-inbox" style="font-size: 3rem; color: #dee2e6;"></i>
          <p class="text-muted mt-3">Aucune catégorie pour le moment.</p>
          <a href="/Admin/Categories/Create" class="btn btn-primary mt-2">
            <i class="bi bi-plus-circle me-2"></i>Créer la première catégorie
          </a>
        </div>
      }
    </div>
  </div>
</div>

