@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin - NÉOVORE";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
}
<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <style>
    :root {
      --admin-primary: #FF6B35;
      --admin-primary-dark: #5568d3;
      --sidebar-width: 260px;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f5f7fa;
      overflow-x: hidden;
    }
    
    .navbar {
      background: linear-gradient(135deg, #FF6B35 0%, #E63946 100%) !important;
      box-shadow: 0 2px 20px rgba(0,0,0,0.1);
      height: 70px;
      z-index: 1000;
    }
    
    .navbar-brand {
      font-weight: 700;
      font-size: 1.3rem;
    }
    
    .sidebar {
      position: fixed;
      top: 70px;
      left: 0;
      height: calc(100vh - 70px);
      width: var(--sidebar-width);
      background: white;
      box-shadow: 2px 0 10px rgba(0,0,0,0.05);
      overflow-y: auto;
      transition: transform 0.3s ease;
      z-index: 999;
    }
    
    .sidebar-menu {
      list-style: none;
      padding: 1.5rem 0;
    }
    
    .sidebar-menu-item {
      margin: 0.25rem 1rem;
    }
    
    .sidebar-menu-link {
      display: flex;
      align-items: center;
      padding: 0.875rem 1.25rem;
      color: #495057;
      text-decoration: none;
      border-radius: 12px;
      transition: all 0.3s ease;
      font-weight: 500;
    }
    
    .sidebar-menu-link:hover {
      background: linear-gradient(135deg, #FF6B3515 0%, #E6394615 100%);
      color: var(--admin-primary);
      transform: translateX(5px);
    }
    
    .sidebar-menu-link.active {
      background: linear-gradient(135deg, #FF6B35 0%, #E63946 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }
    
    .sidebar-menu-link i {
      width: 24px;
      margin-right: 0.75rem;
      font-size: 1.1rem;
    }
    
    .main-content {
      margin-left: var(--sidebar-width);
      padding: 2rem;
      min-height: calc(100vh - 70px);
      transition: margin-left 0.3s ease;
    }
    
    /* Overlay pour mobile */
    .sidebar-overlay {
      display: none;
      position: fixed;
      top: 70px;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 998;
      transition: opacity 0.3s ease;
    }
    
    .sidebar-overlay.show {
      display: block;
    }
    
    /* Responsive - Mobile et Tablette */
    @@media (max-width: 991.98px) {
      .sidebar {
        transform: translateX(-100%);
        width: 280px;
      }
      
      .sidebar.show {
        transform: translateX(0);
      }
      
      .main-content {
        margin-left: 0;
        padding: 1.5rem 1rem;
      }
      
      .navbar {
        height: 60px;
      }
      
      .navbar-brand {
        font-size: 1.1rem;
      }
      
      .navbar .btn {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
      }
      
      .page-title {
        font-size: 1.5rem;
      }
      
      .stat-card {
        padding: 1.5rem;
        margin-bottom: 1rem;
        min-height: 200px !important;
      }
      
      .stat-icon {
        width: 50px;
        height: 50px;
        font-size: 1.5rem;
      }
      
      .stat-value {
        font-size: 2rem;
      }
      
      .admin-card {
        margin-bottom: 1.5rem;
      }
      
      .table {
        font-size: 0.875rem;
      }
      
      .table thead th,
      .table tbody td {
        padding: 0.75rem 0.5rem;
      }
      
      /* Masquer certaines colonnes sur mobile */
      .table .d-none-mobile {
        display: none !important;
      }
    }
    
    /* Petits écrans (mobile) - max-width: 575px */
    @@media (max-width: 575.98px) {
      .main-content {
        padding: 1rem 0.75rem;
      }
      
      .navbar {
        height: 56px;
      }
      
      .navbar-brand {
        font-size: 1rem;
      }
      
      .navbar-brand i {
        font-size: 1.1rem;
      }
      
      .navbar .btn {
        padding: 0.375rem 0.5rem;
        font-size: 0.8rem;
      }
      
      .navbar .btn i {
        margin-right: 0 !important;
      }
      
      .navbar .btn-warning span {
        display: none;
      }
      
      .navbar .btn-outline-light span {
        display: none;
      }
      
      .navbar .d-flex.gap-2 {
        gap: 0.5rem !important;
      }
      
      .navbar .btn {
        padding: 0.5rem 0.75rem !important;
        font-size: 0.85rem;
        min-width: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .navbar .btn-warning {
        padding: 0.5rem 0.75rem !important;
        font-size: 0.85rem;
      }
      
      .sidebar {
        width: 260px;
      }
      
      .sidebar-menu-item {
        margin: 0.25rem 0.75rem;
      }
      
      .sidebar-menu-link {
        padding: 0.75rem 1rem;
        font-size: 0.9rem;
      }
      
      .page-header {
        margin-bottom: 1.5rem;
        padding: 1.25rem 1rem;
      }
      
      .page-title {
        font-size: 1.25rem;
        flex-wrap: wrap;
      }
      
      .page-title i {
        font-size: 1.1rem;
      }
      
      .page-subtitle {
        font-size: 0.875rem;
        line-height: 1.4;
      }
      
      .stat-card {
        padding: 1.25rem;
        min-height: 180px !important;
      }
      
      .stat-icon {
        width: 45px;
        height: 45px;
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
      }
      
      .stat-value {
        font-size: 1.75rem;
      }
      
      .stat-label {
        font-size: 0.85rem;
      }
      
      /* Cards admin sur mobile */
      .admin-card {
        margin-bottom: 1.25rem;
      }
      
      .admin-card .card-body {
        padding: 1rem !important;
      }
      
      /* Page header sur mobile */
      .page-header {
        margin-bottom: 1.5rem;
      }
      
      .page-header .d-flex {
        flex-direction: column;
        align-items: flex-start !important;
      }
      
      .page-header .btn {
        width: 100%;
      }
      
      /* Formulaires sur mobile */
      .form-group,
      .mb-3 {
        margin-bottom: 1rem;
      }
      
      .row.g-3,
      .row.g-4 {
        margin-left: -0.5rem;
        margin-right: -0.5rem;
      }
      
      .row.g-3 > [class*="col-"],
      .row.g-4 > [class*="col-"] {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
        margin-bottom: 0.75rem;
      }
      
      .table {
        font-size: 0.8rem;
        display: block;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
      }
      
      .table thead th,
      .table tbody td {
        padding: 0.5rem 0.375rem;
        white-space: nowrap;
      }
      
      .btn {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
      }
      
      .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.8rem;
      }
      
      .form-control,
      .form-select {
        padding: 0.625rem 0.875rem;
        font-size: 0.9rem;
      }
      
      .admin-card .card-body {
        padding: 1rem !important;
      }
      
      /* Actions rapides en colonne sur mobile */
      .row.g-3 .col-md-6 {
        margin-bottom: 0.75rem;
      }
    }
    
    /* Tablettes - 576px à 991px */
    @@media (min-width: 576px) and (max-width: 991.98px) {
      .main-content {
        padding: 1.75rem 1.25rem;
      }
      
      .stat-card {
        padding: 1.75rem;
      }
      
      .table {
        font-size: 0.9rem;
      }
    }
    
    /* Desktop moyen - 992px à 1199px */
    @@media (min-width: 992px) and (max-width: 1199.98px) {
      .main-content {
        padding: 1.75rem;
      }
      
      .sidebar {
        width: 240px;
      }
      
      .main-content {
        margin-left: 240px;
      }
    }
    
    .admin-card {
      border: none;
      border-radius: 16px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.07);
      transition: all 0.3s ease;
      overflow: hidden;
      background: white;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .admin-card:hover {
      box-shadow: 0 8px 24px rgba(0,0,0,0.12);
      transform: translateY(-4px);
    }
    
    .admin-card .card-body {
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    
    .stat-card {
      background: white;
      border-radius: 16px;
      padding: 1.75rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.07);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 220px;
    }
    
    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--gradient);
    }
    
    .stat-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    }
    
    .stat-icon {
      width: 60px;
      height: 60px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.75rem;
      margin-bottom: 1rem;
    }
    
    .stat-value {
      font-size: 2.5rem;
      font-weight: 700;
      margin: 0.5rem 0;
      color: #2c3e50;
    }
    
    .stat-label {
      color: #6c757d;
      font-weight: 500;
      font-size: 0.95rem;
    }
    
    .btn {
      border-radius: 10px;
      font-weight: 500;
      padding: 0.625rem 1.25rem;
      transition: all 0.3s ease;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #FF6B35 0%, #E63946 100%);
      border: none;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }
    
    .table {
      border-radius: 16px;
      overflow: hidden;
      background: white;
      box-shadow: 0 4px 6px rgba(0,0,0,0.07);
    }
    
    .table thead {
      background: linear-gradient(135deg, #FF6B35 0%, #E63946 100%);
      color: white;
    }
    
    .table thead th {
      border: none;
      padding: 1rem;
      font-weight: 600;
    }
    
    .table tbody td {
      padding: 1rem;
      vertical-align: middle;
    }
    
    .form-control, .form-select {
      border-radius: 10px;
      border: 2px solid #e9ecef;
      padding: 0.75rem 1rem;
      transition: all 0.3s ease;
      width: 100%;
    }
    
    .form-control:focus, .form-select:focus {
      border-color: var(--admin-primary);
      box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
      outline: none;
    }
    
    .form-label {
      font-weight: 600;
      color: #2c3e50;
      margin-bottom: 0.5rem;
    }
    
    .mb-3, .form-group {
      margin-bottom: 1.5rem;
    }
    
    /* Disposition des formulaires */
    .row.g-3 > [class*="col-"],
    .row.g-4 > [class*="col-"] {
      display: flex;
      flex-direction: column;
    }
    
    .badge {
      border-radius: 8px;
      padding: 0.5rem 0.875rem;
      font-weight: 500;
    }
    
    .page-header {
      margin-bottom: 2rem;
      padding: 1.5rem;
      background: white;
      border-radius: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    
    .page-title {
      font-size: 2rem;
      font-weight: 700;
      color: #2c3e50;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .page-subtitle {
      color: #6c757d;
      margin-bottom: 0;
      font-size: 1rem;
    }
  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container-fluid">
    <button class="btn btn-link text-white d-lg-none me-2" type="button" onclick="toggleSidebar()">
      <i class="bi bi-list" style="font-size: 1.5rem;"></i>
    </button>
    <a class="navbar-brand" href="/Admin/Dashboard">
      <i class="bi bi-shield-lock-fill me-2"></i>Administration NÉOVORE
    </a>
    <div class="ms-auto d-flex flex-wrap gap-2 align-items-center">
      <a class="btn btn-outline-light" href="/" target="_blank">
        <i class="bi bi-eye me-1"></i><span class="d-none d-sm-inline">Voir le site</span>
      </a>
      <form method="post" action="/Admin/Account/Logout" class="d-inline">
        @Html.AntiForgeryToken()
        <button class="btn btn-warning" type="submit" title="Déconnexion">
          <i class="bi bi-box-arrow-right d-sm-none"></i>
          <i class="bi bi-box-arrow-right d-none d-sm-inline me-1"></i>
          <span class="d-none d-sm-inline">Déconnexion</span>
        </button>
      </form>
    </div>
  </div>
</nav>

<div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>
<div class="sidebar" id="sidebar">
  <ul class="sidebar-menu">
    <li class="sidebar-menu-item">
      <a href="/Admin/Dashboard" class="sidebar-menu-link @(currentController == "Dashboard" ? "active" : "")">
        <i class="bi bi-speedometer2"></i>
        <span>Dashboard</span>
      </a>
    </li>
    <li class="sidebar-menu-item">
      <a href="/Admin/Demandes/Devis" class="sidebar-menu-link @(currentController == "Demandes" && ViewContext.RouteData.Values["action"]?.ToString() == "Devis" ? "active" : "")">
        <i class="bi bi-file-earmark-text"></i>
        <span>Demandes de devis</span>
      </a>
    </li>
    <li class="sidebar-menu-item">
      <a href="/Admin/Demandes/Contacts" class="sidebar-menu-link @(currentController == "Demandes" && ViewContext.RouteData.Values["action"]?.ToString() == "Contacts" ? "active" : "")">
        <i class="bi bi-envelope"></i>
        <span>Messages contact</span>
      </a>
    </li>
    <li class="sidebar-menu-item">
      <a href="/Admin/Services" class="sidebar-menu-link @(currentController == "Services" ? "active" : "")">
        <i class="bi bi-gear"></i>
        <span>Services</span>
      </a>
    </li>
    <li class="sidebar-menu-item">
      <a href="/Admin/Categories" class="sidebar-menu-link @(currentController == "Categories" ? "active" : "")">
        <i class="bi bi-tags"></i>
        <span>Catégories</span>
      </a>
    </li>
    <li class="sidebar-menu-item">
      <a href="/Admin/Produits" class="sidebar-menu-link @(currentController == "Produits" ? "active" : "")">
        <i class="bi bi-box-seam"></i>
        <span>Produits</span>
      </a>
    </li>
    <li class="sidebar-menu-item">
      <a href="/Admin/Realisations" class="sidebar-menu-link @(currentController == "Realisations" ? "active" : "")">
        <i class="bi bi-trophy"></i>
        <span>Réalisations</span>
      </a>
    </li>
    <li class="sidebar-menu-item">
      <a href="/Admin/Commentaires" class="sidebar-menu-link @(currentController == "Commentaires" ? "active" : "")">
        <i class="bi bi-chat-dots"></i>
        <span>Commentaires</span>
      </a>
    </li>
    <li class="sidebar-menu-item">
      <a href="/Admin/Partenaires" class="sidebar-menu-link @(currentController == "Partenaires" ? "active" : "")">
        <i class="bi bi-people"></i>
        <span>Partenaires</span>
      </a>
    </li>
    <li class="sidebar-menu-item">
      <a href="/Admin/Equipe" class="sidebar-menu-link @(currentController == "Equipe" ? "active" : "")">
        <i class="bi bi-person-badge"></i>
        <span>Équipe</span>
      </a>
    </li>
    <li class="sidebar-menu-item">
      <a href="/Admin/Analytics" class="sidebar-menu-link @(currentController == "Analytics" ? "active" : "")">
        <i class="bi bi-graph-up"></i>
        <span>Statistiques</span>
      </a>
    </li>
    @if (User.IsInRole("Admin"))
    {
      <li class="sidebar-menu-item">
        <a href="/Admin/AdminUsers" class="sidebar-menu-link @(currentController == "AdminUsers" ? "active" : "")">
          <i class="bi bi-people"></i>
          <span>Utilisateurs Admin</span>
        </a>
      </li>
    }
    <li class="sidebar-menu-item">
      <a href="/Admin/Settings" class="sidebar-menu-link @(currentController == "Settings" ? "active" : "")">
        <i class="bi bi-sliders"></i>
        <span>Paramètres</span>
      </a>
    </li>
  </ul>
</div>

<main class="main-content">
  @RenderBody()
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  function toggleSidebar() {
    document.getElementById('sidebar').classList.toggle('show');
  }
  
  // Fermer la sidebar en cliquant à l'extérieur sur mobile
  document.addEventListener('click', function(e) {
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = e.target.closest('[onclick="toggleSidebar()"]');
    
    if (window.innerWidth <= 991 && !sidebar.contains(e.target) && !toggleBtn) {
      sidebar.classList.remove('show');
    }
  });
</script>
@RenderSection("Scripts", required: false)
</body>
</html>
