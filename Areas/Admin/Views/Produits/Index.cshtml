@model IEnumerable<Neovore.Web.Domain.Entities.Produit>
@{
    ViewData["Title"] = "Produits";
}
<div class="page-header">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h1 class="page-title">Produits</h1>
      <p class="page-subtitle">Gérer votre catalogue de produits</p>
    </div>
    <a class="btn btn-primary" href="/Admin/Produits/Create">
      <i class="bi bi-plus-circle me-2"></i>Nouveau produit
    </a>
  </div>
</div>

<div class="admin-card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Catégorie</th>
            <th>Prix</th>
            <th>Images</th>
            <th>Publié</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var p in Model)
          {
            <tr>
              <td>
                <strong>@p.Nom</strong>
                @if (!string.IsNullOrWhiteSpace(p.Slug))
                {
                  <br><small class="text-muted">/@p.Slug</small>
                }
              </td>
              <td>@(p.Categorie?.Nom ?? "-")</td>
              <td>@(p.Prix.HasValue ? p.Prix.Value.ToString("C") : "-")</td>
              <td>
                @if (p.Medias?.Any() == true)
                {
                  <span class="badge bg-primary">@p.Medias.Count</span>
                }
                else
                {
                  <span class="text-muted">-</span>
                }
              </td>
              <td>
                @if (p.EstPublie)
                {
                  <span class="badge bg-success">Oui</span>
                }
                else
                {
                  <span class="badge bg-secondary">Non</span>
                }
              </td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" href="/Admin/Produits/Edit/@p.Id">
                  <i class="bi bi-pencil me-1"></i>Modifier
                </a>
                <form method="post" action="/Admin/Produits/Delete/@p.Id" class="d-inline">
                  @Html.AntiForgeryToken()
                  <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                    <i class="bi bi-trash me-1"></i>Supprimer
                  </button>
                </form>
              </td>
            </tr>
          }
        </tbody>
      </table>
      @if (!Model.Any())
      {
        <div class="text-center py-5">
          <i class="bi bi-inbox" style="font-size: 3rem; color: #dee2e6;"></i>
          <p class="text-muted mt-3">Aucun produit pour le moment.</p>
          <a href="/Admin/Produits/Create" class="btn btn-primary mt-2">
            <i class="bi bi-plus-circle me-2"></i>Créer le premier produit
          </a>
        </div>
      }
    </div>
  </div>
</div>