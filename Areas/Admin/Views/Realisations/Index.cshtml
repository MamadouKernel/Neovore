@model IEnumerable<Neovore.Web.Domain.Entities.Realisation>
@{
    ViewData["Title"] = "Réalisations";
}
<div class="page-header">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h1 class="page-title">Réalisations</h1>
      <p class="page-subtitle">Gérer vos réalisations et projets</p>
    </div>
    <a class="btn btn-primary" href="/Admin/Realisations/Create">
      <i class="bi bi-plus-circle me-2"></i>Nouvelle réalisation
    </a>
  </div>
</div>

<div class="admin-card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Image</th>
            <th>Titre</th>
            <th>Secteur</th>
            <th>Images</th>
            <th>Publié</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var r in Model)
          {
            <tr>
              <td>
                @if (r.Medias?.Any() == true)
                {
                  <img src="@r.Medias.OrderBy(m => m.Ordre).First().Url" alt="@r.Titre" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                }
                else
                {
                  <span class="text-muted">-</span>
                }
              </td>
              <td>
                <strong>@r.Titre</strong>
                @if (!string.IsNullOrWhiteSpace(r.Slug))
                {
                  <br><small class="text-muted">/@r.Slug</small>
                }
              </td>
              <td>@r.Secteur</td>
              <td>
                @if (r.Medias?.Any() == true)
                {
                  <span class="badge bg-primary">@r.Medias.Count</span>
                }
                else
                {
                  <span class="text-muted">-</span>
                }
              </td>
              <td>
                @if (r.EstPublie)
                {
                  <span class="badge bg-success">Oui</span>
                }
                else
                {
                  <span class="badge bg-secondary">Non</span>
                }
              </td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" href="/Admin/Realisations/Edit/@r.Id">
                  <i class="bi bi-pencil me-1"></i>Modifier
                </a>
                <form method="post" action="/Admin/Realisations/Delete/@r.Id" class="d-inline">
                  @Html.AntiForgeryToken()
                  <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réalisation ?');">
                    <i class="bi bi-trash me-1"></i>Supprimer
                  </button>
                </form>
              </td>
            </tr>
          }
        </tbody>
      </table>
      @if (!Model.Any())
      {
        <div class="text-center py-5">
          <i class="bi bi-inbox" style="font-size: 3rem; color: #dee2e6;"></i>
          <p class="text-muted mt-3">Aucune réalisation pour le moment.</p>
          <a href="/Admin/Realisations/Create" class="btn btn-primary mt-2">
            <i class="bi bi-plus-circle me-2"></i>Créer la première réalisation
          </a>
        </div>
      }
    </div>
  </div>
</div>
