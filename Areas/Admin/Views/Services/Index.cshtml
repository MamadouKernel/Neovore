@model IEnumerable<Neovore.Web.Domain.Entities.ServiceOffert>
@{
    ViewData["Title"] = "Services";
}
<div class="page-header">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h1 class="page-title">Services</h1>
      <p class="page-subtitle">Gérer vos services</p>
    </div>
    <a class="btn btn-primary" href="/Admin/Services/Create">
      <i class="bi bi-plus-circle me-2"></i>Nouveau service
    </a>
  </div>
</div>

<div class="admin-card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Ordre</th>
            <th>Image</th>
            <th>Titre</th>
            <th>Slug</th>
            <th>Publié</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var s in Model)
          {
            <tr>
              <td>@s.Ordre</td>
              <td>
                @if (!string.IsNullOrWhiteSpace(s.ImageUrl))
                {
                  <img src="@s.ImageUrl" alt="@s.Titre" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                }
                else
                {
                  <span class="text-muted">-</span>
                }
              </td>
              <td><strong>@s.Titre</strong></td>
              <td><small class="text-muted">/@s.Slug</small></td>
              <td>
                @if (s.EstPublie)
                {
                  <span class="badge bg-success">Oui</span>
                }
                else
                {
                  <span class="badge bg-secondary">Non</span>
                }
              </td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" href="/Admin/Services/Edit/@s.Id">
                  <i class="bi bi-pencil me-1"></i>Modifier
                </a>
                <form method="post" action="/Admin/Services/Delete/@s.Id" class="d-inline">
                  @Html.AntiForgeryToken()
                  <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce service ?');">
                    <i class="bi bi-trash me-1"></i>Supprimer
                  </button>
                </form>
              </td>
            </tr>
          }
        </tbody>
      </table>
      @if (!Model.Any())
      {
        <div class="text-center py-5">
          <i class="bi bi-inbox" style="font-size: 3rem; color: #dee2e6;"></i>
          <p class="text-muted mt-3">Aucun service pour le moment.</p>
          <a href="/Admin/Services/Create" class="btn btn-primary mt-2">
            <i class="bi bi-plus-circle me-2"></i>Créer le premier service
          </a>
        </div>
      }
    </div>
  </div>
</div>
