@model IEnumerable<Neovore.Web.Domain.Entities.ServiceOffert>
@{
    ViewData["Title"] = "Nos services - NÉOVORE";
}
<div class="container py-4 py-lg-5">
  <div class="row mb-5 mb-lg-6">
    <div class="col-lg-8 mx-auto text-center">
      <h1 class="display-4 fw-bold mb-3">
        <i class="bi bi-gear-fill me-3" style="background: linear-gradient(135deg, #FF6B35 0%, #E63946 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>Nos services
      </h1>
      <p class="lead text-muted">
        Découvrez notre gamme complète de services pour répondre à tous vos besoins industriels et écologiques.
      </p>
    </div>
  </div>

  <div class="row g-4 g-lg-5">
    @foreach (var s in Model)
    {
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm overflow-hidden">
          @if (!string.IsNullOrWhiteSpace(s.ImageUrl))
          {
            <div style="height: 200px; overflow: hidden; background: linear-gradient(135deg, #FF6B35 0%, #E63946 100%);">
              <img src="@s.ImageUrl" 
                   alt="@s.Titre" 
                   class="img-fluid w-100 h-100" 
                   style="object-fit: cover; opacity: 0.9;">
            </div>
          }
          else
          {
            <div style="height: 200px; background: linear-gradient(135deg, #FF6B35 0%, #E63946 100%); display: flex; align-items: center; justify-content: center;">
              <i class="bi bi-gear-fill text-white" style="font-size: 4rem; opacity: 0.5;"></i>
            </div>
          }
          <div class="card-body p-4 p-lg-5">
            <h2 class="h5 fw-bold mb-3">@s.Titre</h2>
            <p class="text-muted mb-4">@s.Resume</p>
            <a class="btn btn-primary" href="/services/@s.Slug" style="border-radius: 8px;">
              En savoir plus <i class="bi bi-arrow-right ms-1"></i>
            </a>
          </div>
        </div>
      </div>
    }
  </div>

  @if (!Model.Any())
  {
    <div class="text-center py-5">
      <i class="bi bi-inbox" style="font-size: 4rem; color: #dee2e6;"></i>
      <p class="text-muted mt-3">Aucun service disponible pour le moment.</p>
    </div>
  }
</div>
