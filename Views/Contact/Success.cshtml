@{
    ViewData["Title"] = "Message envoyé - NÉOVORE";
}
<div class="container py-4 py-lg-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="text-center py-5 py-lg-6">
        <div class="mb-4" style="width: 120px; height: 120px; background: linear-gradient(135deg, #28a745 0%, #20c997 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
          <i class="bi bi-check-circle-fill text-white" style="font-size: 4rem;"></i>
        </div>
        
        <h1 class="display-5 fw-bold mb-3">Message envoyé !</h1>
        <p class="lead text-muted mb-4">
          Merci pour votre message. Notre équipe vous répondra dans les plus brefs délais.
        </p>
        
        <div class="card border-0 shadow-sm mt-4" style="border-radius: 16px;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center justify-content-center mb-3">
              <i class="bi bi-clock me-2" style="font-size: 1.5rem; color: #FF6B35;"></i>
              <span class="fw-bold">Temps de réponse</span>
            </div>
            <p class="text-muted mb-0">Nous répondons généralement sous 24-48 heures.</p>
          </div>
        </div>
        
        <div class="d-flex flex-wrap gap-3 justify-content-center mt-5">
          <a class="btn btn-primary btn-lg" href="/" style="border-radius: 12px;">
            <i class="bi bi-house-door me-2"></i>Retour à l'accueil
          </a>
          <a class="btn btn-outline-primary btn-lg" href="/Services" style="border-radius: 12px;">
            <i class="bi bi-gear me-2"></i>Nos services
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
