@model Neovore.Web.ViewModels.ContactVm
@{
    ViewData["Title"] = "Contact - NÉOVORE";
}
<div class="container py-4 py-lg-5">
  <div class="row mb-5 mb-lg-6">
    <div class="col-lg-8 mx-auto text-center">
      <h1 class="display-4 fw-bold mb-3">
        <i class="bi bi-envelope-fill me-3" style="background: linear-gradient(135deg, #FF6B35 0%, #E63946 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>Contactez-nous
      </h1>
      <p class="lead text-muted">
        Une question ? Un projet ? N'hésitez pas à nous écrire, nous vous répondrons dans les plus brefs délais.
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="card border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">
        <div class="card-body p-5 p-lg-6">
          <form method="post">
            @Html.AntiForgeryToken()
            <input type="text" name="Website" value="" class="d-none" autocomplete="off" />

            <div class="row g-4">
              <div class="col-md-6">
                <label asp-for="Nom" class="form-label fw-bold">
                  <i class="bi bi-person me-2" style="color: #FF6B35;" aria-hidden="true"></i>Nom complet
                </label>
                <input asp-for="Nom" class="form-control form-control-lg" placeholder="Votre nom" aria-describedby="Nom-error"/>
                <span asp-validation-for="Nom" class="text-danger small" id="Nom-error"></span>
              </div>
              <div class="col-md-6">
                <label asp-for="Email" class="form-label fw-bold">
                  <i class="bi bi-envelope me-2" style="color: #FF6B35;" aria-hidden="true"></i>Email
                </label>
                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="votre@email.com" aria-describedby="Email-error"/>
                <span asp-validation-for="Email" class="text-danger small" id="Email-error"></span>
              </div>
              <div class="col-md-6">
                <label asp-for="Telephone" class="form-label fw-bold">
                  <i class="bi bi-telephone me-2" style="color: #FF6B35;" aria-hidden="true"></i>Téléphone
                </label>
                <input asp-for="Telephone" class="form-control form-control-lg" placeholder="06 12 34 56 78" aria-describedby="Telephone-error"/>
                <span asp-validation-for="Telephone" class="text-danger small" id="Telephone-error"></span>
              </div>
              <div class="col-md-6">
                <label asp-for="Sujet" class="form-label fw-bold">
                  <i class="bi bi-tag me-2" style="color: #FF6B35;" aria-hidden="true"></i>Sujet
                </label>
                <input asp-for="Sujet" class="form-control form-control-lg" placeholder="Sujet de votre message" aria-describedby="Sujet-error"/>
                <span asp-validation-for="Sujet" class="text-danger small" id="Sujet-error"></span>
              </div>
              <div class="col-12">
                <label asp-for="Message" class="form-label fw-bold">
                  <i class="bi bi-chat-dots me-2" style="color: #FF6B35;" aria-hidden="true"></i>Message
                </label>
                <textarea asp-for="Message" class="form-control" rows="6" placeholder="Décrivez votre demande..." aria-describedby="Message-error"></textarea>
                <span asp-validation-for="Message" class="text-danger small" id="Message-error"></span>
              </div>
            </div>

            <div class="d-grid mt-4">
              <button class="btn btn-primary btn-lg" type="submit" style="border-radius: 12px; padding: 1rem;">
                <i class="bi bi-send me-2" aria-hidden="true"></i>Envoyer le message
              </button>
            </div>
          </form>
        </div>
      </div>

      <div class="text-center mt-4">
        <p class="text-muted">
          <i class="bi bi-clock me-2"></i>Nous répondons généralement sous 24-48h
        </p>
      </div>
    </div>
  </div>

  <!-- Carte de localisation -->
  <partial name="_CarteLocalisation" />
</div>

@section Scripts{
  <partial name="_ValidationScriptsPartial" />
}
