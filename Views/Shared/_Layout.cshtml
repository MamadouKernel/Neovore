@using Neovore.Web.Application.Services
@inject Neovore.Web.Application.Services.SettingsService SettingsService
@{
    var settings = await SettingsService.GetAsync();
    var title = ViewData["Title"] as string ?? settings?.SeoTitleDefaut ?? "NÉOVORE";
}
<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title</title>
  <meta name="description" content="@(ViewData["MetaDescription"] as string ?? settings?.SeoDescriptionDefaut ?? "")" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/jpeg" href="@(settings?.LogoUrl ?? "/images/logo.jpeg")" />
  <link rel="apple-touch-icon" href="@(settings?.LogoUrl ?? "/images/logo.jpeg")" />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content="@title" />
  <meta property="og:description" content="@(ViewData["MetaDescription"] as string ?? settings?.SeoDescriptionDefaut ?? "")" />
  <meta property="og:image" content="@(Context.Request.Scheme)://@(Context.Request.Host)@(settings?.LogoUrl ?? "/images/logo.jpeg")" />
  <meta property="og:url" content="@(Context.Request.Scheme)://@(Context.Request.Host)@(Context.Request.Path)" />
  <meta property="og:site_name" content="@(settings?.NomEntreprise ?? "NÉOVORE")" />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="@title" />
  <meta name="twitter:description" content="@(ViewData["MetaDescription"] as string ?? settings?.SeoDescriptionDefaut ?? "")" />
  <meta name="twitter:image" content="@(Context.Request.Scheme)://@(Context.Request.Host)@(settings?.LogoUrl ?? "/images/logo.jpeg")" />
  
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/custom.css">
  <style>
    :root {
      /* Palette personnalisable - Chargée depuis les paramètres du site */
      @{
        var couleurPrimaire = settings?.CouleurPrimaire ?? "#FF6B35";
        var couleurSecondaire = settings?.CouleurSecondaire ?? "#E63946";
        var couleurAccent = settings?.CouleurAccent ?? "#1E88E5";
        var couleurOr = settings?.CouleurOr ?? "#dbb438";
        var modeSombre = settings?.ModeSombre ?? false;
      }
      
      /* Couleurs principales */
      --color-orange: @couleurPrimaire;
      --color-orange-light: @couleurPrimaire;
      --color-red: @couleurSecondaire;
      --color-red-light: @couleurSecondaire;
      --color-blue: @couleurAccent;
      --color-blue-dark: @couleurAccent;
      --color-blue-light: @couleurAccent;
      --color-gold: @couleurOr;
      
      /* Gradients principaux - Utilisent les couleurs personnalisées */
      --gradient-primary: linear-gradient(135deg, @couleurPrimaire 0%, @couleurSecondaire 100%);
      --gradient-secondary: linear-gradient(135deg, @couleurSecondaire 0%, @couleurPrimaire 100%);
      --gradient-accent: linear-gradient(135deg, @couleurAccent 0%, @couleurAccent 100%);
      --gradient-combo: linear-gradient(135deg, @couleurPrimaire 0%, @couleurSecondaire 50%, @couleurAccent 100%);
      
      /* Couleurs de base */
      --primary-color: @couleurPrimaire;
      --primary-dark: @couleurSecondaire;
      --secondary-color: @couleurAccent;
      --gold-color: @couleurOr;
    }
    
      @if (modeSombre)
      {
      <text>
      /* Mode nuit activé */
      body {
        background-color: #0f1419 !important;
        color: #e4e6eb !important;
      }
      
      .navbar {
        background: rgba(15, 20, 25, 0.95) !important;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }
      
      .navbar-brand, .nav-link {
        color: #e4e6eb !important;
      }
      
      .nav-link:hover, .nav-link.active {
        color: var(--primary-color) !important;
      }
      
      .card, .admin-card {
        background-color: #1a1f2e !important;
        border-color: rgba(255, 255, 255, 0.1) !important;
        color: #e4e6eb !important;
      }
      
      .card-body, .admin-card .card-body {
        color: #e4e6eb !important;
      }
      
      .form-control, .form-select {
        background-color: #1a1f2e !important;
        border-color: rgba(255, 255, 255, 0.2) !important;
        color: #e4e6eb !important;
      }
      
      .form-control:focus, .form-select:focus {
        background-color: #1a1f2e !important;
        border-color: var(--primary-color) !important;
        color: #e4e6eb !important;
      }
      
      .form-label, label {
        color: #e4e6eb !important;
      }
      
      .text-muted {
        color: #9ca3af !important;
      }
      
      footer {
        background: linear-gradient(135deg, #0f1419 0%, #1a1f2e 100%) !important;
        color: #e4e6eb !important;
      }
      
      footer .text-white-50 {
        color: #9ca3af !important;
      }
      
      .btn-outline-primary, .btn-outline-secondary {
        border-color: rgba(255, 255, 255, 0.3) !important;
        color: #e4e6eb !important;
      }
      
      .btn-outline-primary:hover, .btn-outline-secondary:hover {
        background-color: var(--primary-color) !important;
        border-color: var(--primary-color) !important;
        color: #fff !important;
      }
      
      .hero-section {
        background: linear-gradient(135deg, #1a1f2e 0%, #0f1419 100%) !important;
        color: #e4e6eb !important;
      }
      
      .stat-card {
        background: #1a1f2e !important;
        border-color: rgba(255, 255, 255, 0.1) !important;
        color: #e4e6eb !important;
      }
      
      h1, h2, h3, h4, h5, h6 {
        color: #e4e6eb !important;
      }
      
      p, span, div {
        color: inherit;
      }
      
      .page-header {
        color: #e4e6eb !important;
      }
      
      .page-title, .page-subtitle {
        color: #e4e6eb !important;
      }
      
      table {
        color: #e4e6eb !important;
      }
      
      .table {
        --bs-table-bg: #1a1f2e !important;
        --bs-table-color: #e4e6eb !important;
        border-color: rgba(255, 255, 255, 0.1) !important;
      }
      
      .table-striped > tbody > tr:nth-of-type(odd) > td {
        background-color: rgba(255, 255, 255, 0.05) !important;
      }
      
      .alert {
        background-color: #1a1f2e !important;
        border-color: rgba(255, 255, 255, 0.2) !important;
        color: #e4e6eb !important;
      }
      
      .alert-success {
        background-color: rgba(40, 167, 69, 0.2) !important;
        border-color: rgba(40, 167, 69, 0.5) !important;
        color: #90ee90 !important;
      }
      
      .alert-danger {
        background-color: rgba(220, 53, 69, 0.2) !important;
        border-color: rgba(220, 53, 69, 0.5) !important;
        color: #ff6b6b !important;
      }
      </text>
    }
    
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      line-height: 1.6;
    }
    
    .navbar {
      background: rgba(255, 255, 255, 0.95) !important;
      backdrop-filter: blur(10px);
      box-shadow: 0 2px 20px rgba(0,0,0,0.1);
      padding: 1rem 0;
      transition: all 0.3s ease;
    }
    
    .navbar-brand {
      font-weight: 700;
      font-size: 1.5rem;
      color: #333;
    }
    
    .navbar-nav .nav-link {
      font-weight: 500;
      color: #333 !important;
      margin: 0 0.5rem;
      padding: 0.5rem 1rem !important;
      border-radius: 8px;
      transition: all 0.3s ease;
      position: relative;
    }
    
    .navbar-nav .nav-link:hover {
      background: var(--gradient-primary);
      color: white !important;
      transform: translateY(-2px);
    }
    
    .navbar-nav .nav-link.active {
      background: var(--gradient-primary);
      color: white !important;
    }
    
    .navbar-brand span {
      color: var(--primary-color);
      font-weight: 700;
    }
    
    main {
      min-height: calc(100vh - 300px);
      padding-bottom: 4rem;
    }
    
    .container {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
    
    @@media (min-width: 1200px) {
      .container {
        padding-left: 2rem;
        padding-right: 2rem;
      }
    }
    
    .card {
      border: none;
      border-radius: 16px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.07);
      transition: all 0.3s ease;
      overflow: hidden;
    }
    
    .card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 24px rgba(0,0,0,0.15);
    }
    
    .btn {
      border-radius: 8px;
      font-weight: 500;
      padding: 0.6rem 1.5rem;
      transition: all 0.3s ease;
    }
    
    .btn-primary {
      background: var(--gradient-primary);
      border: none;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 16px rgba(255, 107, 53, 0.4);
    }
    
    .btn-outline-primary {
      border: 2px solid;
      border-image: var(--gradient-primary) 1;
    }
    
    footer {
      background: var(--gradient-accent);
      color: white;
      padding: 3rem 0 1.5rem;
      margin-top: 4rem;
    }
    
    footer a {
      color: rgba(255,255,255,0.8);
      text-decoration: none;
      transition: all 0.3s ease;
    }
    
    footer a:hover {
      color: white;
    }
    
    .hero-gradient {
      background: var(--gradient-primary);
      color: white;
      border-radius: 20px;
      padding: 4rem 2rem;
      margin-bottom: 4rem;
    }
    
    @@keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .fade-in-up {
      animation: fadeInUp 0.6s ease-out;
    }
    
    .section-title {
      font-weight: 700;
      margin-bottom: 3rem;
      position: relative;
      padding-bottom: 1rem;
    }
    
    @@media (min-width: 992px) {
      .section-title {
        margin-bottom: 4rem;
      }
    }
    
    .mb-lg-6 {
      margin-bottom: 4rem !important;
    }
    
    @@media (min-width: 992px) {
      .p-lg-6 {
        padding: 4rem !important;
      }
    }
    
    .section-title::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 60px;
      height: 4px;
      background: var(--gradient-primary);
      border-radius: 2px;
    }
    
    .form-control, .form-select {
      border-radius: 8px;
      border: 2px solid #e9ecef;
      padding: 0.75rem 1rem;
      transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
    }
    
    .navbar-toggler {
      border: none;
    }
    
    .navbar-toggler:focus {
      box-shadow: none;
    }
    /* Skip link pour l'accessibilité */
    .skip-link {
      position: absolute;
      top: -40px;
      left: 0;
      background: var(--gradient-primary);
      color: white;
      padding: 8px 16px;
      text-decoration: none;
      z-index: 10000;
      border-radius: 0 0 8px 0;
    }
    .skip-link:focus {
      top: 0;
    }
    /* Amélioration du focus pour la navigation au clavier */
    a:focus-visible,
    button:focus-visible,
    input:focus-visible,
    textarea:focus-visible,
    select:focus-visible {
      outline: 3px solid var(--primary-color);
      outline-offset: 2px;
    }
  </style>
</head>
<body>
<a href="#main-content" class="skip-link">Aller au contenu principal</a>
<nav class="navbar navbar-expand-lg navbar-light fixed-top" role="navigation" aria-label="Navigation principale">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center" href="/" style="text-decoration: none;">
      <img src="@(settings?.LogoUrl ?? "/images/logo.jpeg")" alt="@(settings?.NomEntreprise ?? "NÉOVORE")" style="height: 55px; margin-right: 12px;" class="d-none d-sm-inline" />
      <img src="@(settings?.LogoUrl ?? "/images/logo.jpeg")" alt="@(settings?.NomEntreprise ?? "NÉOVORE")" style="height: 40px; margin-right: 8px;" class="d-inline d-sm-none" />
      <span class="d-none d-md-inline">@(settings?.NomEntreprise ?? "NÉOVORE")</span>
      <span class="d-inline d-md-none">@(settings?.NomEntreprise ?? "NÉOVORE")</span>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="nav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/">
            <i class="bi bi-house-door me-1" aria-hidden="true"></i>Accueil
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Services" ? "active" : "")" href="/Services">
            <i class="bi bi-gear me-1" aria-hidden="true"></i>Services
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Produits" ? "active" : "")" href="/Produits">
            <i class="bi bi-box-seam me-1" aria-hidden="true"></i>Produits
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Realisations" ? "active" : "")" href="/Realisations">
            <i class="bi bi-trophy me-1" aria-hidden="true"></i>Réalisations
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Devis" ? "active" : "")" href="/devis">
            <i class="bi bi-file-earmark-text me-1" aria-hidden="true"></i>Devis
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "active" : "")" href="/contact">
            <i class="bi bi-envelope me-1" aria-hidden="true"></i>Contact
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<main id="main-content" style="margin-top: 80px;" role="main">
  @RenderBody()
</main>

<footer role="contentinfo">
  <div class="container">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="mb-3">
          <img src="@(settings?.LogoUrl ?? "/images/logo.jpeg")" alt="@(settings?.NomEntreprise ?? "NÉOVORE")" style="height: 50px; background: white; padding: 5px; border-radius: 8px;" />
        </div>
        <p class="text-white-50">Solutions écologiques & industrielles de qualité pour votre entreprise.</p>
      </div>
      <div class="col-md-4">
        <h5 class="fw-bold mb-3">Liens rapides</h5>
        <ul class="list-unstyled">
          <li class="mb-2"><a href="/Services"><i class="bi bi-arrow-right me-2" aria-hidden="true"></i>Nos services</a></li>
          <li class="mb-2"><a href="/Produits"><i class="bi bi-arrow-right me-2" aria-hidden="true"></i>Nos produits</a></li>
          <li class="mb-2"><a href="/Realisations"><i class="bi bi-arrow-right me-2" aria-hidden="true"></i>Réalisations</a></li>
          <li class="mb-2"><a href="/devis"><i class="bi bi-arrow-right me-2" aria-hidden="true"></i>Demander un devis</a></li>
        </ul>
      </div>
      <div class="col-md-4">
        <h5 class="fw-bold mb-3">Contact</h5>
        <p class="text-white-50 mb-2">
          <i class="bi bi-geo-alt me-2" aria-hidden="true"></i><span class="visually-hidden">Adresse : </span>@settings?.Adresse
        </p>
        @if (!string.IsNullOrWhiteSpace(settings?.TelephoneContact))
        {
          <p class="text-white-50 mb-2">
            <i class="bi bi-telephone me-2" aria-hidden="true"></i><span class="visually-hidden">Téléphone : </span><a href="tel:@settings.TelephoneContact.Replace(" ", "").Replace("+", "")">@settings.TelephoneContact</a>
          </p>
        }
        @if (!string.IsNullOrWhiteSpace(settings?.EmailContact))
        {
          <p class="text-white-50 mb-2">
            <i class="bi bi-envelope me-2" aria-hidden="true"></i><span class="visually-hidden">Email : </span><a href="mailto:@settings.EmailContact">@settings.EmailContact</a>
          </p>
        }
        @{
          var hasSocialMedia = !string.IsNullOrWhiteSpace(settings?.FacebookUrl) ||
                               !string.IsNullOrWhiteSpace(settings?.LinkedInUrl) ||
                               !string.IsNullOrWhiteSpace(settings?.TwitterUrl) ||
                               !string.IsNullOrWhiteSpace(settings?.InstagramUrl) ||
                               !string.IsNullOrWhiteSpace(settings?.YouTubeUrl) ||
                               !string.IsNullOrWhiteSpace(settings?.TikTokUrl);
        }
        @if (hasSocialMedia)
        {
          <div class="mt-3">
            <div class="d-flex flex-wrap gap-3">
              @if (!string.IsNullOrWhiteSpace(settings?.FacebookUrl))
              {
                <a href="@settings.FacebookUrl" target="_blank" rel="noopener noreferrer" class="text-white-50" aria-label="Visitez notre page Facebook (nouvelle fenêtre)" style="transition: transform 0.2s;">
                  <i class="bi bi-facebook" style="font-size: 1.5rem;" aria-hidden="true"></i>
                </a>
              }
              @if (!string.IsNullOrWhiteSpace(settings?.LinkedInUrl))
              {
                <a href="@settings.LinkedInUrl" target="_blank" rel="noopener noreferrer" class="text-white-50" aria-label="Visitez notre page LinkedIn (nouvelle fenêtre)" style="transition: transform 0.2s;">
                  <i class="bi bi-linkedin" style="font-size: 1.5rem;" aria-hidden="true"></i>
                </a>
              }
              @if (!string.IsNullOrWhiteSpace(settings?.TwitterUrl))
              {
                <a href="@settings.TwitterUrl" target="_blank" rel="noopener noreferrer" class="text-white-50" aria-label="Visitez notre compte Twitter / X (nouvelle fenêtre)" style="transition: transform 0.2s;">
                  <i class="bi bi-twitter-x" style="font-size: 1.5rem;" aria-hidden="true"></i>
                </a>
              }
              @if (!string.IsNullOrWhiteSpace(settings?.InstagramUrl))
              {
                <a href="@settings.InstagramUrl" target="_blank" rel="noopener noreferrer" class="text-white-50" aria-label="Visitez notre compte Instagram (nouvelle fenêtre)" style="transition: transform 0.2s;">
                  <i class="bi bi-instagram" style="font-size: 1.5rem;" aria-hidden="true"></i>
                </a>
              }
              @if (!string.IsNullOrWhiteSpace(settings?.YouTubeUrl))
              {
                <a href="@settings.YouTubeUrl" target="_blank" rel="noopener noreferrer" class="text-white-50" aria-label="Visitez notre chaîne YouTube (nouvelle fenêtre)" style="transition: transform 0.2s;">
                  <i class="bi bi-youtube" style="font-size: 1.5rem;" aria-hidden="true"></i>
                </a>
              }
              @if (!string.IsNullOrWhiteSpace(settings?.TikTokUrl))
              {
                <a href="@settings.TikTokUrl" target="_blank" rel="noopener noreferrer" class="text-white-50" aria-label="Visitez notre compte TikTok (nouvelle fenêtre)" style="transition: transform 0.2s;">
                  <i class="bi bi-tiktok" style="font-size: 1.5rem;" aria-hidden="true"></i>
                </a>
              }
            </div>
          </div>
        }
      </div>
    </div>
    <hr class="my-4" style="border-color: rgba(255,255,255,0.2);">
    <div class="row">
      <div class="col-md-6 text-center text-md-start">
        <p class="mb-2 text-white-50">
          © @DateTime.Now.Year @(settings?.NomEntreprise ?? "NÉOVORE"). Tous droits réservés.
        </p>
        <div class="d-flex flex-wrap gap-3 justify-content-center justify-content-md-start">
          <a href="/mentions-legales" class="text-white-50 text-decoration-none small">
            Mentions légales
          </a>
          <span class="text-white-50">|</span>
          <a href="/politique-de-confidentialite" class="text-white-50 text-decoration-none small">
            Politique de confidentialité
          </a>
        </div>
      </div>
      <div class="col-md-6 text-center text-md-end">
        <a href="/Admin/Account/Login" class="text-white-50 text-decoration-none">
          <i class="bi bi-shield-lock me-1"></i>Admin
        </a>
      </div>
    </div>
  </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/site.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
